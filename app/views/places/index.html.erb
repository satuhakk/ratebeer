<p id="notice"><%= notice %></p>

<%= form_tag places_path do %>
  city <%= text_field_tag :city, params[:city] %>
  <%= submit_tag "Search" %>
<% end %>

<% if @places %>
  <table class="table table-hover">
    <thead>
      <td> ID </td>
      <td> Name </td>
      <td> Status </td>
      <td> Street </td>
      <td> Zip </td>
      <td> City </td>
      <td> Country </td>
      <td> Overall </td>
    </thead>
    <% @places.each do |place| %>
      <tr>
        <td><%= place.id %></td>
        <td><%= link_to place.name, place_path(place.id, :city => place.city) %></td>
        <td><%= place.status %></td>
        <td><%= place.street %></td>
        <td><%= place.zip %></td>
        <td><%= place.city %></td>
        <td><%= place.country %></td>
        <td><%= place.overall %></td>
      </tr>
    <% end %>
  </table>
<% end %>
